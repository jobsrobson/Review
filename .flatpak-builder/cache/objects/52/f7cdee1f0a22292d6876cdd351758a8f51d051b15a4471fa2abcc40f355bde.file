[Application]
name=com.github.jobsr.Review
runtime=org.gnome.Platform/x86_64/48
sdk=org.gnome.Sdk/x86_64/48
command=review

[Context]
shared=network;ipc;
sockets=x11;wayland;session-bus;fallback-x11;
devices=dri;
filesystems=xdg-data/review:create;

[Extension com.github.jobsr.Review.Debug]
directory=lib/debug
autodelete=true
no-autodownload=true

[Build]
built-extensions=com.github.jobsr.Review.Debug;