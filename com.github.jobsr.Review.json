{
    "app-id": "com.github.jobsr.Review",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "review",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--socket=session-bus",
        "--filesystem=xdg-data/review:create"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "review",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app cryptography",
                "mkdir -p /app/lib/review-app",
                "cp -r review /app/lib/review-app/",
                "cp main.py /app/lib/review-app/",
                "install -Dm755 /dev/stdin /app/bin/review <<'EOF'\n#!/bin/sh\nexport PYTHONPATH=$(python3 -c 'import site; print(site.getsitepackages([\"/app\"])[0])'):/app/lib/review-app:$PYTHONPATH\ncd /app/lib/review-app\nexec python3 main.py \"$@\"\nEOF",
                "install -Dm644 review/icons/review-app.svg /app/share/icons/hicolor/scalable/apps/com.github.jobsr.Review.svg",
                "install -Dm644 com.github.jobsr.Review.desktop /app/share/applications/com.github.jobsr.Review.desktop",
                "install -Dm644 com.github.jobsr.Review.metainfo.xml /app/share/metainfo/com.github.jobsr.Review.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}